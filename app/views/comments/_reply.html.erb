<div id="reply_<%= comment.parent_id %>_<%= comment.id %>" class="offset-md-1">
    <div class="row">
    <div class="col-md-1">
            <% if comment.user.user_pic.present? %>
                <%= image_tag(comment.user.user_pic, :height=>'50px',
                    :width=>'50px', :style => 'border-radius: 50%') %>
            <% else %>
                <%= image_tag("/user.png", :height=>'50px', 
                    :width=>'50px',:style => 'border-radius: 50%') %>
            <% end %>
        </div>
        <div class="col-md-9">
            <a href="#" style="font-weight:bold">
                <%= comment.user.username %>
            </a>
            <%= comment.created_at %>
            <p><%= comment.text_content %></p>
        </div>
    </div>
</div>