$('#comment_<%= @comment.id %> #comment_content')
    .html('<%= @comment.text_content %>');
$('#comment_<%= @comment.id %> #comment_stars')
    .empty();
$('#comment_<%= @comment.id %> #comment_stars')
    .append("<%= escape_javascript(render partial: 'ratings/stars', locals: {comment: @comment}) %>")
$("#average_rating").empty();
$("#average_rating")
    .append("<%= escape_javascript(render partial: 'average', locals: {comment: @comment}) %>");
