<div class="sign-form">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2>Sign in</h2>
  <!-- show flash in <div> -->

    <div class="form-group">
			<div class="input-group">
				<span class="input-group-addon"><i class="fa fa-user"></i></span>
				<%= f.text_field :username, placeholder: "Username", autocomplete: "off", required: true, class: "form-control" %>
			</div>
    </div>

		<div class="form-group">
			<div class="input-group">
				<span class="input-group-addon"><i class="fa fa-lock"></i></span>
    			<%= f.password_field :password, placeholder: "Password", autocomplete: "off", required: true, class: "form-control" %>
			</div>
    </div>

  <% if devise_mapping.rememberable? -%>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end -%>
  
	<div class="form-group">
   <%= f.submit "Sign in", class: "btn btn-primary btn-block btn-lg" %>
  </div>
  <%= render "users/shared/links" %>
  <% end %>

</div>